        <item name="colorPrimary">@color/theme_medium_dark</item>
        <item name="colorPrimaryVariant">@color/theme_medium_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rally_blue_300</item>
        <item name="colorSecondaryVariant">@color/rally_blue_500</item>
        <item name="colorOnSecondary">@color/black</item>
